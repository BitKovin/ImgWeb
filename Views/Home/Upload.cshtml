@using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="upload-container">
        <div class="form-group">
            <label for="imageInput">Select Image:</label>
            <div class="input-container">
                <input type="file" class="form-control-file" id="imageInput" name="images" onchange="showPreview(event);" accept="image/*">
            </div>
            <p>Image Name:</p>
            <input type="text" class="form-text" id="imageName" name="name">
        </div>

        <div class="form-group">
            <label>Preview:</label>
            <img id="preview" style="max-width: 400px; max-height: 400px;">
        </div>

        <button type="submit" class="btn btn-primary upload-button" disabled>Upload</button>
    </div>
}

<style>
    .upload-container {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    .input-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .browse-button {
        background-color: #007bff;
        color: #fff;
        border-radius: 5px;
        padding: 5px 10px;
        cursor: pointer;
    }

    .upload-button {
        margin-top: 10px;
    }
</style>

<script>
    function showPreview(event) {
        var input = event.target;
        var preview = document.getElementById('preview');
        preview.src = URL.createObjectURL(input.files[0]);
        preview.style.display = "block";

        var uploadButton = document.querySelector('.upload-button');
        uploadButton.disabled = false;
    }
</script>
